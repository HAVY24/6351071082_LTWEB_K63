@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<head>
    <style>
        /* Container for the registration form */
        .register-container {
            width: 350px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

            /* Title of the registration form */
            .register-container h2 {
                text-align: center;
                color: #333;
                font-size: 24px;
                margin-bottom: 20px;
            }

        /* Form group styling */
        .form-group {
            margin-bottom: 15px;
        }

            /* Label styling */
            .form-group label {
                display: block;
                font-size: 14px;
                color: #555;
                margin-bottom: 5px;
            }

        /* Input field styling */
        .form-input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

            /* Placeholder styling */
            .form-input::placeholder {
                color: #bbb;
            }

        /* Error message styling */
        .error {
            color: red;
            font-size: 12px;
            margin-top: 5px;
        }

        /* Button container styling */
        .button-container {
            text-align: center;
        }

        /* Submit button styling */
        .btn-submit {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

            /* Hover effect for submit button */
            .btn-submit:hover {
                background-color: #45a049;
            }

        /* Validation summary styling */
        .validation-summary {
            color: red;
            font-size: 14px;
            margin-bottom: 15px;
        }
    </style>
</head>

<div class="register-container">
    <h2>ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "validation-summary" })

        <div class="form-group">
            <label for="HotenKH">Họ tên khách hàng:</label>
            @Html.TextBox("HotenKH", null, new { @class = "form-input", @placeholder = "Nhập họ tên" })
            <span class="error">@ViewData["Loi1"]</span>
        </div>

        <div class="form-group">
            <label for="TenDN">Tên đăng nhập:</label>
            @Html.TextBox("TenDN", null, new { @class = "form-input", @placeholder = "Nhập tên đăng nhập" })
            <span class="error">@ViewData["Loi2"]</span>
        </div>

        <div class="form-group">
            <label for="Matkhau">Mật khẩu:</label>
            @Html.Password("Matkhau", null, new { @class = "form-input", @placeholder = "Nhập mật khẩu" })
            <span class="error">@ViewData["Loi3"]</span>
        </div>

        <div class="form-group">
            <label for="Matkhaunhaplai">Mật khẩu nhập lại:</label>
            @Html.Password("Matkhaunhaplai", null, new { @class = "form-input", @placeholder = "Nhập lại mật khẩu" })
            <span class="error">@ViewData["Loi14"]</span>
        </div>

        <div class="form-group">
            <label for="Email">Email:</label>
            @Html.TextBox("Email", null, new { @class = "form-input", @placeholder = "Nhập email" })
            <span class="error">@ViewData["Loi5"]</span>
        </div>

        <div class="form-group">
            <label for="DiaChi">Địa chỉ:</label>
            @Html.TextBox("DiaChi", null, new { @class = "form-input", @placeholder = "Nhập địa chỉ" })
            <span class="error">@ViewData["Loi6"]</span>
        </div>

        <div class="form-group">
            <label for="Dienthoai">Điện thoại:</label>
            @Html.TextBox("Dienthoai", null, new { @class = "form-input", @placeholder = "Nhập số điện thoại" })
            <span class="error">@ViewData["Loi7"]</span>
        </div>

        <div class="form-group">
            <label for="Ngaysinh">Ngày sinh:</label>
            <input type="date" id="Ngaysinh" name="Ngaysinh" class="form-input" />
        </div>

        <div class="form-group button-container">
            <input type="submit" value="Đăng ký" class="btn-submit" />
        </div>
    }
</div>
