    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<head>
    <style>
        /* Styling for the container of the welcome message */
        .welcome-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 300px;
            background-color: #f4f4f4;
            margin: 0 auto;
            border-radius: 8px;
