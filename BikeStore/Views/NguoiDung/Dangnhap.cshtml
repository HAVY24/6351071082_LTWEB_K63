@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<head>
    <style>
        /* Container for login form */
        .login-container {
            width: 300px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

            /* Title of the form */
            .login-container h2 {
                text-align: center;
                color: #333;
                font-size: 24px;
                margin-bottom: 20px;
            }

        /* Styling for form group */
        .form-group {
            margin-bottom: 20px;
        }

            /* Label styling */
            .form-group label {
                display: block;
                font-size: 14px;
                color: #555;
                margin-bottom: 5px;
            }

        /* Input field styling */
        .form-input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

            /* Placeholder styling for input fields */
            .form-input::placeholder {
                color: #bbb;
            }

        /* Button container styling */
        .button-container {
            text-align: center;
        }

        /* Submit button styling */
        .btn-submit {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }

            /* Hover effect for submit button */
            .btn-submit:hover {
                background-color: #45a049;
            }

        /* Validation summary styling */
        .validation-summary {
            color: red;
            font-size: 14px;
            margin-bottom: 15px;
        }
    </style>
</head>

<div class="login-container">
    <h2>ĐĂNG NHẬP</h2>
    @using (Html.BeginForm("Dangnhap", "NguoiDung", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "validation-summary" })
        <div class="form-group">
            <label for="TenDN">Tên đăng nhập:</label>
            @Html.TextBox("TenDN", null, new { @class = "form-input", @placeholder = "Nhập tên đăng nhập" })
        </div>

        <div class="form-group">
            <label for="Matkhau">Mật khẩu:</label>
            @Html.Password("Matkhau", null, new { @class = "form-input", @placeholder = "Nhập mật khẩu" })
        </div>

        <div class="form-group button-container">
            <input type="submit" value="Đăng nhập" class="btn-submit" />
        </div>
    }
</div>
