<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin</title>

    <!-- Thêm link đến Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Thêm CSS tùy chỉnh -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            margin-bottom: 5px;
        }

        .sidebar {
            background-color: #333;
            padding-top: 20px;
            min-height: 100vh;
            border-right: 1px solid #ddd;
        }

            .sidebar a {
                color: #f8f9fa;
                font-size: 16px;
                padding: 10px 20px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #007bff;
                    color: white;
                }

        .container {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
</head>
<body>

    <!-- Navbar trên cùng -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Admin")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar trái -->
            <div class="col-md-3 sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        @Html.ActionLink("TRANG CHỦ", "Index", "Admin", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Thống kê xe", "ThongKeXe", "Admin", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Quản lý Xe", "Xeganmay", "Admin", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>

            <!-- Nội dung chính -->
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>


    <!-- Thêm link đến các script JS của Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> <!-- Đảm bảo là jQuery đầy đủ -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
