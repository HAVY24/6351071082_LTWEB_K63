@model IEnumerable<BikeStore.XEGANMAY>

@{
    ViewBag.Title = "SPTheoLoaiXe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<head>
    <style>
        /* Styling for the product list container */
        .product-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
            gap: 15px;
            list-style-type: none;
        }

            /* Styling for each product item */
            .product-list li {
                background-color: #fff;
                border: 1px solid #ddd;
                border-radius: 8px;
                width: 200px;
                text-align: center;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
                margin: 10px;
            }

                /* Hover effect for product items */
                .product-list li:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                }

            /* Styling the product image */
            .product-list img {
                width: 100%;
                height: 150px;
                object-fit: cover;
                border-bottom: 1px solid #ddd;
            }

            /* Styling the product name */
            .product-list span {
                display: block;
                padding: 10px;
                font-size: 16px;
                color: #333;
                font-weight: bold;
            }

            /* Add spacing between the links and product details */
            .product-list a {
                text-decoration: none;
                color: inherit;
            }
    </style>
</head>

<ul class="product-list">
    @foreach (var item in Model)
    {
        <li>
            <a href="@Url.Action("Details","QuanLyXe", new { id = item.MaXe })">
                <img alt="@item.TenXe" src="~/images/@item.Anhbia" />
                <span>@item.TenXe</span>
            </a>
        </li>
    }
</ul>
