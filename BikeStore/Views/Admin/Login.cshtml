@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        /* Reset cơ bản */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background: linear-gradient(to bottom, #6a11cb, #2575fc);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

            .login-container h2 {
                margin-bottom: 20px;
                color: #333;
            }

            .login-container .form-group {
                margin-bottom: 15px;
                text-align: left;
            }

            .login-container label {
                display: block;
                font-size: 14px;
                color: #666;
                margin-bottom: 5px;
            }

            .login-container input[type="text"],
            .login-container input[type="password"] {
                width: 100%;
                padding: 10px;
                font-size: 14px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

                .login-container input[type="text"]:focus,
                .login-container input[type="password"]:focus {
                    border-color: #6a11cb;
                    outline: none;
                    box-shadow: 0 0 5px rgba(106, 17, 203, 0.5);
                }

            .login-container button {
                background: #6a11cb;
                color: #fff;
                border: none;
                border-radius: 4px;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.3s ease;
                width: 100%;
            }

                .login-container button:hover {
                    background: #2575fc;
                }

            .login-container .forgot-password {
                margin-top: 15px;
            }

                .login-container .forgot-password a {
                    color: #6a11cb;
                    text-decoration: none;
                }

                    .login-container .forgot-password a:hover {
                        text-decoration: underline;
                    }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Đăng Nhập</h2>


        <!-- Hiển thị thông báo -->
        <h4 style="color:red; text-align: center;font-size:13px; margin-bottom:10px">@ViewBag.Thongbao</h4>

        <!-- Form đăng nhập -->
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label for="username">Tài khoản</label>
                <input type="text" id="username" name="username" placeholder="Nhập tài khoản">
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input type="password" id="password" name="password" placeholder="Nhập mật khẩu">
            </div>
            <button type="submit">Đăng Nhập</button>
        }
        <div class="forgot-password">
            <p>Chưa có tài khoản? <a href="@Url.Action("Dangky", "Admin")">Đăng ký ngay</a></p>
        </div>
    </div>
</body>
</html>