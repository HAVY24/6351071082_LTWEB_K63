<style>
  
    /* Tiêu đề chính */
    h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #d9534f; /* Màu đỏ nổi bật */
        margin-bottom: 20px;
    }

    /* Tiêu đề phụ */
    h3 {
        text-align: center;
        font-size: 20px;
        color: #555;
        margin-bottom: 15px;
    }

    hr {
        border: 0;
        height: 1px;
        background: #ddd;
        margin: 20px 0;
    }

    /* Danh sách chi tiết */
    .dl-horizontal dt {
        font-weight: bold;
        color: #333;
        width: 180px; /* Độ rộng tiêu đề */
        float: left;
        clear: left;
        text-align: right;
        margin-right: 20px;
    }

    .dl-horizontal dd {
        margin-left: 200px; /* Khoảng cách cho nội dung */
        margin-bottom: 10px;
        color: #555;
        font-size: 16px;
    }

        /* Hình ảnh */
        .dl-horizontal dd img {
            max-width: 100%; /* Đảm bảo ảnh không vượt quá chiều rộng */
            height: auto;
            border-radius: 8px; /* Bo góc cho ảnh */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Đổ bóng cho ảnh */
        }

    /* Các nút hành động */
    .form-actions {
        text-align: center; /* Căn giữa nút */
        margin-top: 20px;
    }

        .form-actions .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background: #d9534f; /* Màu đỏ */
            border: none;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .form-actions .btn:hover {
                background: #c9302c; /* Màu đậm hơn khi hover */
            }

        .form-actions a {
            margin-left: 10px;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background: #5bc0de; /* Màu xanh */
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .form-actions a:hover {
                background: #31b0d5; /* Màu đậm hơn khi hover */
            }
</style>
